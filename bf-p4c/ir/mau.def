    // Can be a HashGenExpression or a Slice of one
    safe_vector<int> units = {};

    bool allocated() const { return !units.empty(); }
    dbprint {
        out << "hash_dist(" << expr << ")";
        if (allocated())
            out << units;
    }
    stringOp = "hash_dist ";
}

/** Expression computed in the input xbar, generally in the GF matrix
