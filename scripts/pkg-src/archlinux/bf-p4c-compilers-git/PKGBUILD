# Maintainer: Jed Liu <jliu@barefootnetworks.com>
pkgname=bf-p4c-compilers-git
pkgver=r0
pkgrel=1
pkgdesc="BFN: P4 compilers"
arch=('x86_64')
url="https://github.com/barefootnetworks/bf-p4c-compilers"
license=('custom')
depends=('bf-model' 'python2-yaml')
makedepends=('cmake' 'pyinstaller2')
provides=("${pkgname%-git}")
conflicts=("${pkgname%-git}")
source=('archlinux.patch')
md5sums=('SKIP')

_gitbranch='master'
_giturl='git@github.com:barefootnetworks/bf-p4c-compilers'

prepare() {
  cd "${srcdir}"
  git clone --recursive -b "${_gitbranch}" "${_giturl}" "${pkgname%-git}"

  cd "${srcdir}/${pkgname%-git}"
  patch -p1 <../archlinux.patch
}

pkgver() {
  cd "${srcdir}/${pkgname%-git}"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "${srcdir}/${pkgname%-git}"
  ./bootstrap_bfn_compilers.sh --no-ptf -DCMAKE_INSTALL_PREFIX:PATH=/usr

  cd build
  make
}

package() {
  cd "${srcdir}/${pkgname%-git}/build"
  make DESTDIR="${pkgdir}/" install
}
