dnl $1 target
dnl $2 program name
dnl $3 program path
dnl $4 status (xfail or xpass)
m4_define([TOFINO_TEST_RUN],
[
 AT_SETUP([$1/$2])
 AT_XFAIL_IF([ test "$4" = "xfail" ])
 AT_KEYWORDS($1)
 AT_KEYWORDS($6)
 AT_CHECK([
  cd $abs_top_srcdir/build
  mkdir -p $1/$5
  echo "cd $abs_top_srcdir/build" > $1/$2.test
  echo "../extensions/p4_tests/runtest .. \${*} ../$2" >> $1/$2.test
  chmod +x $1/$2.test
  ../extensions/p4_tests/runtest .. $3
  ],
  [0],
  [stdout],
  [stderr])
  AT_CLEANUP
])

